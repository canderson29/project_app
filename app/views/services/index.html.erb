<div class="container bordered">
  <div class="row-fluid">
    <div class="span12">
      <h1>Listing services</h1>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span3">
      <h2>Name</h2>
    </div>
    <div class="span6">
      <h2>Description</h2>
    </div>
    <div class="span3">
      <h2>Manage</h2>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span3 center">
      <% @services.each do |service| %>
      <div class="row-fluid">
        <%= service.name %> 
      </div>
      <% end %>
    </div>
    <div class="span6 center">
      <% @services.each do |service| %>
      <div class="row-fluid">
        <%= service.description %>
      </div>
      <% end %>
    </div>
    <div class="span3 center">
      <% @services.each do |service| %>
      <div class="row-fluid">
        <%= link_to 'Show', service %>
        <%= link_to 'Edit', edit_service_path(service) %>
        <%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
      <%end%>
    </div>
  </div>
  <br />
  <div class="row-fluid">
    <%= link_to 'New Service', new_service_path %>
  </div>
</div>

