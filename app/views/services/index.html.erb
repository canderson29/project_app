<% if signed_in? %>
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span12">
        <h1>Services</h1>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span3">
        <h2>Name</h2>
      </div>
      <div class="span6">
        <h2>Description</h2>
      </div>
      <div class="span3">
        <h2>Manage</h2>
      </div>
    </div>
    <% @services.each do |service| %>
    <div class="row-fluid bottom-spacer">
      <div class="span3 center">
          <%= service.name %> 
      </div>
      <div class="span6 center">
          <%= service.description %>
      </div>
      <div class="span3 center">
          <%= link_to 'Show', service %>
          <%= link_to 'Edit', edit_service_path(service) %>
          <%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
      </div> 
      <%end%>
    <br />
    <div class="row-fluid">
      <%= link_to 'New Service', new_service_path %>
    </div>
  </div>
<% else %>
  <div class="container">
    <div class="row-fluid">
        <h1>Services</h1>
    </div>
    <% @services.each do |service| %>
    <div class="row-fluid">
      <div class="span12 top-spacer">
        <div class="span3">
          <h2><%= service.name %></h2>
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span9 offset1">
        <%= service.description %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span9 offset1">
        <%= link_to 'Check out our projects', service %>
      </div>
    </div>
    <% end %>
  </div>
<%end%>

