<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <h2><%= @project.name %> | <%= @project.description %></h2>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12 center">
      <%= @project.start_date.strftime('%m/%d/%Y') %> to <%= @project.end_date.strftime('%m/%d/%Y') %>
    </div>
  </div>
  <div class="row=fluid">
      <div class="span11 center">
          <%= Service.find(@project.service_id).name %>
      </div>
  </div>
  <div class="row-fluid">
    <% if signed_in? %>
    <%= link_to 'Edit', edit_service_project_path(@project.service_id, @project) %> |
    <%= link_to 'Delete', service_project_path(@service), method: :delete, data: { confirm: 'Are you sure?' } %> |
    <% end %>
    <%= link_to 'Back', service_path(@project.service_id) %>
  </div>
</div>

