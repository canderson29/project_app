<h1>Projects</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Service</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.name %></td>
    <td><%= project.description %></td>
    <td><%= project.start_date %></td>
    <td><%= project.end_date %></td>
    <td><%= Service.find(project.service_id).name %></td>
    <td><%= link_to 'Show', service_projects_path %></td>
    <td><%= link_to 'Edit', edit_service_project_path(project) %></td>
    <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

